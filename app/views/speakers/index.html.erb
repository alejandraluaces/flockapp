<h1>All Speakers</h1>
<% @speakers.each do |speaker| %>
<section class="container">
  <table class="schedule">
    <thead>
      <tr>
        <th colspan="2">
          <h2>Speakers</h2>
        </th>
      </tr>
    </thead>
    <tbody>
    <tr class="event">
      <th class="date">
        <div class="calendar-icon"><h2 class="day-double">10</h2></div></th>
      <td>
        <h3><%= link_to h(speaker.full_name), profile_path(speaker.user) %></h3>
        <p>Areas of Expertise: Tumblr, Sleeping</p>
      </td>
    </tr>
    </tbody>
  </table>
</section>
<% end %>
<%= link_to 'Add a Speaker', new_speaker_path %>


