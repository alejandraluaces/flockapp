      <tr>
        <th colspan="2">
          <h2>Day 2: Friday, November 8</h2>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr class="event">
        <th class="date">
          <div class="calendar-icon"></div>
        </th>
        <td>
          <h3>Conference</h3>
          <p>Location, Anywhere
        </td>
      </tr>
    </tr>

  <tbody>
  </section>
    <% @conferences.each do |conference| %>
      <tr>
        <td><%= conference.name %></td>
        <td><%= conference.start_date %></td>
        <td><%= conference.end_date %></td>
        <td><%= conference.location %></td>
        <td><%= conference.category %></td>
        <td><%= conference.safety_policy %></td>
        <td><%= conference.childcare %></td>
        <td><%= link_to pluralize(conference.activities.count, "Activity"), conference_activities_path(conference) %></td>
        <td><%= link_to 'Show', conference %></td>
        <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
