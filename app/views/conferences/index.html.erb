      <th colspan="2">
        <h2>Month 2013</h2>
        <div class="pushpin"><%= image_tag "pushpin.gif" %></div>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr class="event">
      <th class="date">
        <div class="calendar-icon"></div></th>
      <td>
